                    android:strokeWidth="1"/>
            </group>
            <group
                android:name="group_1"
                android:pivotX="24"
                android:pivotY="24">
                <path
                    android:name="path_1"
                    android:pathData="M 16.36 36.91 L 19.92 36.91 C 21.28 36.91 22 36.19 22 34.82 L 22 13.15 C 22 11.71 21.28 11.07 19.92 11.07 L 16.36 11.07 C 15 11.07 14.28 11.77 14.28 13.15 L 14.28 34.82 C 14.28 36.2 15 36.91 16.36 36.91 Z M 27.72 36.91 L 31.27 36.91 C 32.65 36.91 33.35 36.19 33.35 34.82 L 33.35 13.15 C 33.35 11.71 32.65 11.07 31.27 11.07 L 27.72 11.07 C 26.34 11.07 25.63 11.77 25.63 13.15 L 25.63 34.82 C 25.63 36.2 26.35 36.91 27.72 36.91 Z"
